<%- include('_header'), {title}%> 
<%- include('_nav') %> 

    <div class="main-wrapper"> 
	    	    
	    <article class="about-section py-5">
		    <div class="container">
			    <h2 class="title mb-3"><%=post.title%></h2>
          <div class="meta mb-1"><span class="date">Published <%= timeDifference(post.createdAt) %></span><span class="time">Author <%=post.author.name%> </span><span class="comment"><a class="text-link" href="#">0 comments</a></span></div>
			    <div>
            <%- post.content.replace(/<img(.*?)src="(?!\/)(images\/)(.*?)"(.*?)>/g, '<img$1src="/$2$3"$4 class="img-fluid">') %>
          </div>
		    </div>
	    </article><!--//about-section-->
	        
      <% if (post.comments && post.comments.length > 0) { %>
        <section class="gradient-custom">
          <div class="container my-5 py-5">
            <div class="row d-flex justify-content-center">
              <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                  <div class="card-body p-4">
                    <h4 class="text-center mb-4 pb-2">Comments</h4>
      
                    <div class="row comment-container">
                      <div class="col">
                        <% post.comments.forEach(comment => { %>
                          <div class="d-flex flex-start mb-4 comment-wrapper">
                            <img class="rounded-circle shadow-1-strong me-3"
                              src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(21).webp" alt="avatar" width="65"
                              height="65" />
      
                            <div class="flex-grow-1 flex-shrink-1">
                              <div class="d-flex justify-content-between align-items-center">
                                <p class="mb-1">
                                  <%= comment.name %> <span class="small"><%= timeDifference(comment.date) %></span>
                                </p>
                                <a href="#!" data-commentId="<%= comment.id %>" class="reply-btn ereply"><i class="fas fa-reply fa-xs"></i><span class="small reply">reply</span></a>
                              </div>
                              <p class="small mb-0">
                                <%= comment.text %>
                              </p>
      
                            <!---- <div class="reply-form" style="display: none;">
                                <h5>Add a reply</h5>
                                <form class="reply-form" data-postid="<%= post.id %>" data-slug="<%= post.slug %>">
                                  <div class="form-outline">
                                    <input type="text" class="form-control rname" placeholder="Your Name">
                                  </div>
                                  <div class="form-outline">
                                    <textarea class="form-control rtext" placeholder="Your Reply" rows="4"></textarea>
                                  </div>
                                  <div class="d-flex justify-content-between mt-3">
                                    <button type="button" class="btn btn-reply reply-btn btn-success">
                                      Reply <i class="fas fa-long-arrow-alt-right ms-1"></i>
                                    </button>
                                  </div>
                                </form>
                              </div>---->
      
                              <div class="replies-container">
                                <% comment.replies.forEach(reply => { %>
                                  <div class="d-flex flex-start mt-4 comment-wrapper">
                                    <a class="me-3" href="#">
                                      <img class="rounded-circle shadow-1-strong"
                                        src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(21).webp" alt="avatar"
                                        width="65" height="65" />
                                    </a>
                                    <div class="me-3 flex-grow-1 flex-shrink-1">
                                      <div class="d-flex justify-content-between align-items-center">
                                        <p class="mb-1">
                                          <%= reply.name %> <span class="small"> -:<%= timeDifference(reply.date) %> </span>
                                        </p>
                                        <a href="#!" data-commentId="<%= reply.parentId %>" class="reply-btn ereply"><i class="fas fa-reply fa-xs"></i><span class="small reply">reply</span></a>
                                      </div>
                                      <p class="small mb-0">
                                        <%= reply.text %>
                                      </p>
                                    </div>
                                  </div>
                                <% }) %>
                              </div>
                            </div>
                          </div>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      <% } %>

      
      


